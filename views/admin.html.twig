{% extends "layout.html.twig" %}
{% set adminMenu = true %}

{% block title %}Administration{% endblock %}

{% block content %}
    <div class="page-header">
        <h1>Administration</h1>
        <p class="lead">Gérez les liens et les utilisateurs de Watson</p>
    </div>

    {% for flashMessage in app.session.flashbag.get('success') %}
        <div class="alert alert-success alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            <span class="glyphicon glyphicon-ok"></span> {{ flashMessage }}
        </div>
    {% endfor %}

    <div class="admin-tabs">
        <ul class="nav nav-tabs nav-justified modern-tabs">
            <li class="active">
                <a href="#links" data-toggle="tab">
                    <span class="glyphicon glyphicon-link"></span> Liens
                </a>
            </li>
            <li>
                <a href="#users" data-toggle="tab">
                    <span class="glyphicon glyphicon-user"></span> Utilisateurs
                </a>
            </li>
        </ul>
    </div>

    <div class="tab-content admin-content">
        <!-- Onglet Liens -->
        <div class="tab-pane fade in active" id="links">
            <div class="admin-panel">
                <div class="admin-panel-header">
                    <h3><span class="glyphicon glyphicon-link"></span> Gestion des liens</h3>
                    <a href="{{ path('admin_link_add') }}" class="btn btn-primary">
                        <span class="glyphicon glyphicon-plus"></span> Ajouter un lien
                    </a>
                </div>

                {% if links %}
                    <div class="table-responsive">
                        <table class="table table-hover modern-table">
                            <thead>
                            <tr>
                                <th>Titre</th>
                                <th>Auteur</th>
                                <th>Description</th>
                                <th class="text-right">Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for link in links %}
                                <tr>
                                    <td>
                                        <a href="{{ path('link', { 'id': link.id }) }}" class="table-link">
                                            {{ link.title }}
                                        </a>
                                    </td>
                                    <td>
                                        {{ link.user.username }}
                                    </td>
                                    <td>{{ link.desc | truncate(60) }}</td>
                                    <td class="text-right">
                                        <div class="action-buttons">
                                            <a href="{{ path('admin_link_edit', { 'id': link.id }) }}"
                                               class="btn btn-info btn-sm"
                                               title="Modifier">
                                                <span class="glyphicon glyphicon-edit"></span>
                                            </a>
                                            <button type="button"
                                                    class="btn btn-danger btn-sm"
                                                    title="Supprimer"
                                                    data-toggle="modal"
                                                    data-target="#linkDialog{{ link.id }}">
                                                <span class="glyphicon glyphicon-trash"></span>
                                            </button>
                                        </div>

                                        <!-- Modal -->
                                        <div class="modal fade modern-modal" id="linkDialog{{ link.id }}" tabindex="-1" role="dialog">
                                            <div class="modal-dialog modal-dialog-centered">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <div class="modal-icon">
                                                            <span class="glyphicon glyphicon-warning-sign"></span>
                                                        </div>
                                                        <h4 class="modal-title">Confirmer la suppression</h4>
                                                        <p class="text-muted">Cette action est irréversible</p>
                                                    </div>
                                                    <div class="modal-body">
                                                        <p>Êtes-vous sûr de vouloir supprimer le lien :</p>
                                                        <p><strong>{{ link.title }}</strong></p>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-default" data-dismiss="modal">
                                                            <span class="glyphicon glyphicon-remove"></span> Annuler
                                                        </button>
                                                        <a href="{{ path('admin_link_delete', { 'id': link.id }) }}" class="btn btn-danger">
                                                            <span class="glyphicon glyphicon-trash"></span> Supprimer
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>

                    {% if totalPages is defined and totalPages > 1 %}
                        <nav aria-label="Pagination des liens" class="text-center">
                            <ul class="pagination modern-pagination">
                                <li class="{{ page <= 1 ? 'disabled' : '' }}">
                                    <a href="?page={{ page - 1 }}#links">
                                        <span class="glyphicon glyphicon-chevron-left"></span> Précédent
                                    </a>
                                </li>

                                {% for p in 1..totalPages %}
                                    <li class="{{ p == page ? 'active' : '' }}">
                                        <a href="?page={{ p }}#links">{{ p }}</a>
                                    </li>
                                {% endfor %}

                                <li class="{{ page >= totalPages ? 'disabled' : '' }}">
                                    <a href="?page={{ page + 1 }}#links">
                                        Suivant <span class="glyphicon glyphicon-chevron-right"></span>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    {% endif %}
                {% else %}
                    <div class="alert alert-info text-center empty-state">
                        <span class="glyphicon glyphicon-info-sign"></span>
                        <p><strong>Aucun lien trouvé.</strong></p>
                        <p>Commencez par ajouter votre premier lien.</p>
                    </div>
                {% endif %}
            </div>
        </div>

        <!-- Onglet Utilisateurs -->
        <div class="tab-pane fade" id="users">
            <div class="admin-panel">
                <div class="admin-panel-header">
                    <h3><span class="glyphicon glyphicon-user"></span> Gestion des utilisateurs</h3>
                    <a href="{{ path('admin_user_add') }}" class="btn btn-primary">
                        <span class="glyphicon glyphicon-plus"></span> Ajouter un utilisateur
                    </a>
                </div>

                {% if users %}
                    <div class="table-responsive">
                        <table class="table table-hover modern-table">
                            <thead>
                            <tr>
                                <th>Nom d'utilisateur</th>
                                <th class="text-right">Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for user in users %}
                                <tr>
                                    <td>
                                        {{ user.username }}
                                    </td>
                                    <td class="text-right">
                                        <div class="action-buttons">
                                            <a href="{{ path('admin_user_edit', { 'id': user.id }) }}"
                                               class="btn btn-info btn-sm"
                                               title="Modifier">
                                                <span class="glyphicon glyphicon-edit"></span>
                                            </a>
                                            <button type="button"
                                                    class="btn btn-danger btn-sm"
                                                    title="Supprimer"
                                                    data-toggle="modal"
                                                    data-target="#userDialog{{ user.id }}">
                                                <span class="glyphicon glyphicon-trash"></span>
                                            </button>
                                        </div>

                                        <!-- Modal -->
                                        <div class="modal fade modern-modal" id="userDialog{{ user.id }}" tabindex="-1" role="dialog">
                                            <div class="modal-dialog modal-dialog-centered">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <div class="modal-icon">
                                                            <span class="glyphicon glyphicon-warning-sign"></span>
                                                        </div>
                                                        <h4 class="modal-title">Confirmer la suppression</h4>
                                                        <p class="text-muted">Cette action est irréversible</p>
                                                    </div>
                                                    <div class="modal-body">
                                                        <p>Êtes-vous sûr de vouloir supprimer l'utilisateur :</p>
                                                        <p><strong>{{ user.username }}</strong></p>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-default" data-dismiss="modal">
                                                            <span class="glyphicon glyphicon-remove"></span> Annuler
                                                        </button>
                                                        <a href="{{ path('admin_user_delete', { 'id': user.id }) }}" class="btn btn-danger">
                                                            <span class="glyphicon glyphicon-trash"></span> Supprimer
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% else %}
                    <div class="alert alert-info text-center empty-state">
                        <span class="glyphicon glyphicon-info-sign"></span>
                        <p><strong>Aucun utilisateur trouvé.</strong></p>
                        <p>Commencez par ajouter un premier utilisateur.</p>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
