{% extends "layout.html.twig" %}

{% block title %}Résultat(s) pour "{{ tag.title }}"{% endblock %}

{% block content %}
    <div class="page-header">
        <h1>
            Résultat(s) associé(s) au tag "{{ tag.title }}"
            <small>{{ links|length }} résultat(s)</small>
        </h1>
    </div>

    <div class="row row-eq-height">
        {% if links|length > 0 %}
            {% for link in links %}
                <div class="col-xs-12 col-sm-6 col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">
                                <a href="{{ path('link', { 'id': link.id }) }}">{{ link.title }}</a>
                            </h5>
                            <p class="text-muted">
                                <small>
                                    <span class="glyphicon glyphicon-user"></span>
                                    Partagé par {{ link.user.username }}
                                </small>
                            </p>
                            <p class="card-text">{{ link.desc }}</p>
                            {% if link.tags|length > 0 %}
                                <div class="link-tags">
                                    {% for tag in link.tags %}
                                        <a href="{{ path('tag', { 'id': tag.id }) }}" class="label label-info tag-badge">
                                            <span class="glyphicon glyphicon-tag"></span> {{ tag.title }}
                                        </a>
                                    {% endfor %}
                                </div>
                            {% endif %}
                            <a href="{{ link.url }}" class="btn btn-primary" target="_blank" rel="noopener noreferrer">
                                <span class="glyphicon glyphicon-new-window"></span> Ouvrir le lien
                            </a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        {% else %}
            <div class="col-xs-12">
                <div class="alert alert-warning text-center">
                    <h4><span class="glyphicon glyphicon-search"></span> Aucun résultat</h4>
                    <p>Aucun résultat ne correspond au tag "{{ tag.title }}".</p>
                    <a href="{{ path('home') }}" class="btn btn-primary">
                        <span class="glyphicon glyphicon-arrow-left"></span> Retour à l'accueil
                    </a>
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}
